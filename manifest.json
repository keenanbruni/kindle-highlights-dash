{
    "manifest_version": 3,
    "name": "Kindle Highlights Data",
    "description": "A Chrome extension that extracts and visualizes Kindle highlights per chapter.",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Kindle Highlights Data"
    },
    "content_scripts": [
      {
        "matches": ["https://read.amazon.com/*"],
        "js": [
          "jquery-3.7.1.min.js",
          "content-script.js"
        ],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ],
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}
